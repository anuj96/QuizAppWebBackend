db.users.aggregate([{
  $lookup: {

    from: "usersresponse",

    let: {
      user_Id: "$userId"
    },

    pipeline: [

      {

        $match: {
          $expr: {
            $and: [{
                $in: ["$$user_Id", "$usersAnswer.userId"]
              },
              {
                $eq: ["$date", "10-MAY"]
              }

            ]
          }
        }



        {

          $project: {
            "usersAnswer.userId": 1,
            "usersAnswer.score": 1,
            "usersAnswer.time": 1,
            date: 1

          }

        }
      },

    ],
    as: "test"

  }

}]).pretty();